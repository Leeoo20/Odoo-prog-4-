<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="tetras_school_management.ContactFormScreen">
         <div class="back-button" t-on-click="() => this.tetras.showScreen('MainScreen')">Back</div>
         <div class="body">
             <div class="container">
               <div class="contact-form-button-update"
                  t-on-click="() => state.isOpen = !state.isOpen">
                 <i class='bx bxs-book-reader' ></i>
                    Update
                </div>
                 <div class="wrapper">
                     <div>
                         <h2>Name</h2>
                         <input type="text" id="name" t-model="props.contact.name" t-att-readonly="state.isOpen" t-on-keyup="onContactChange" />
                     </div>
                     <div>
                         <h2>Phone</h2>
                         <input type="text" id="phone" t-model="props.contact.phone" t-att-readonly="state.isOpen" t-on-keyup="onContactChange"/>
                     </div>
                      <div>
                         <h2>Email</h2>
                          <input type="text" id="email" t-model="props.contact.email" t-att-readonly="state.isOpen" t-on-keyup="onContactChange"/>
                     </div>
                 </div>
             </div>
         </div>
    </t>
</templates>
